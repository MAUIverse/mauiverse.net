---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PrimaryLinkButton from '../../components/PrimaryLinkButton.astro';
---
<BaseLayout
  title="Discord | MAUIverse"
  description="Join the MAUIverse Discord community."
>
  <section class="discord-hero flex items-center justify-center px-6 relative z-10">
    <div class="w-full max-w-2xl text-center">
      <div class="fade-in w-28 h-28 md:w-36 md:h-36 rounded-3xl mx-auto mb-10 relative">
        <img
          src="/img/discord.jpg"
          alt="Discord community"
          class="w-full h-full rounded-3xl object-cover"
          loading="lazy"
        />
        <div class="absolute -inset-3 rounded-3xl bg-purple-500/20 blur-xl -z-10"></div>
      </div>
      <p class="fade-in fade-in-d1 text-brand font-bold mb-4 text-sm font-header uppercase tracking-[0.2em]">Join the conversation</p>
      <h1 class="fade-in fade-in-d1 text-gradient text-5xl md:text-7xl font-header font-bold mb-5">
        MAUIverse Discord
      </h1>
      <p class="fade-in fade-in-d2 text-muted text-lg md:text-xl max-w-lg mx-auto mb-10 leading-relaxed">
        Meet other .NET MAUI developers, ask questions, share your projects, and stay connected with the community.
      </p>

      <div class="fade-in fade-in-d3 flex flex-col sm:flex-row items-center justify-center gap-4">
        <PrimaryLinkButton
          href="https://discord.gg/HzVbds6Q8x"
          target="_blank"
          rel="noopener noreferrer"
          size="md"
        >
          Open Discord
        </PrimaryLinkButton>
        <a
          href="/"
          class="inline-flex items-center justify-center rounded-full border border-edge px-8 py-3.5 text-lg font-semibold text-brand-dark transition-colors hover:border-brand/40 hover:text-brand"
        >
          Back to home
        </a>
      </div>
    </div>
  </section>

  <style>
    .discord-hero {
      min-height: calc(100vh - 4rem);
    }

    @supports (height: 100dvh) {
      .discord-hero {
        min-height: calc(100dvh - 4rem);
      }
    }
  </style>
</BaseLayout>
