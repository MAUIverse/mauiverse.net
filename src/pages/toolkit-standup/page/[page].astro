---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import LivestreamCountdown from '../../../components/LivestreamCountdown.astro';
import FeedEntries from '../../../components/community-feed/FeedEntries.astro';
import Pagination from '../../../components/community-feed/Pagination.astro';
import { getCollection } from 'astro:content';
import { paginateAndBuildStaticPaths } from '../../../utils/pagination';

export async function getStaticPaths() {
  const pageSize = 8;
  const entries = (await getCollection('community-feed'))
    .filter((e) => e.data.isToolkitStandup === true)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  return paginateAndBuildStaticPaths(entries, pageSize, (page) => ({
    params: { page: String(page.currentPage) },
  }));
}

const { entries, currentPage, totalPages } = Astro.props;
---

<BaseLayout
  title={`Community Toolkit Standup (Page ${currentPage})`}
  description=".NET MAUI Community Toolkit Standup â€” past episodes."
>
  <div class="min-h-screen">
    <div class="container mx-auto max-w-4xl px-6 py-24 md:py-32 space-y-20 md:space-y-28">
      <!-- Countdown Hero -->
      <section class="text-center">
        <p class="text-brand font-bold mb-4 text-sm font-header uppercase tracking-[0.2em]">
          Community Toolkit Standup
        </p>
        <LivestreamCountdown
          variant="full"
          collection="toolkit-standup"
          channelUrl="https://www.youtube.com/@dotnetfdn"
          channelName=".NET Foundation YouTube Channel"
          defaultTitle=".NET MAUI Community Toolkit Standup"
        />
      </section>

      <!-- Past Standups -->
      <section>
        <h2 class="text-brand-dark font-header font-bold text-2xl mb-6">Past Standups</h2>
        <FeedEntries entries={entries} actionLabel="Watch" />
        <Pagination currentPage={currentPage} totalPages={totalPages} basePath="/toolkit-standup" />
      </section>
    </div>
  </div>
</BaseLayout>
