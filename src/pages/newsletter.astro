---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsletterSignupForm from '../components/NewsletterSignupForm.astro';
---

<BaseLayout
  title="Newsletter | MAUIverse"
  description="Subscribe to the MAUIverse newsletter for updates."
  allowPageScroll={true}
>
  <section id="newsletter" class="py-28 md:py-40 px-6 min-h-screen flex items-start justify-center relative z-10">
    <div class="max-w-md mx-auto text-center">
      <p class="fade-in text-brand text-sm font-semibold uppercase tracking-[0.2em] mb-4">
        Stay in the loop
      </p>
      <h1 class="fade-in fade-in-d1 text-gradient text-4xl md:text-6xl font-header font-bold mb-5">
        Newsletter
      </h1>
      <p class="fade-in fade-in-d2 text-muted text-lg md:text-xl mb-12 leading-relaxed">
        Stay in touch with MAUIverse, and get notified first about community updates and more.
        <br />
        <span class="italic">No spam. Ever.</span>
      </p>

      <div class="fade-in fade-in-d3 text-left">
        <NewsletterSignupForm variant="newsletter" />
      </div>
    </div>
  </section>
  <script src="https://cdn.sendfox.com/js/form.js" charset="utf-8" defer></script>
</BaseLayout>
