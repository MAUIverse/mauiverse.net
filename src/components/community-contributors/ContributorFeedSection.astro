---
import type { CollectionEntry } from 'astro:content';
import FeedEntries from '../community-feed/FeedEntries.astro';
import Pagination from '../community-feed/Pagination.astro';
import { isSameAuthorKey } from '../../data/authors';

interface Props {
  githubUsername: string;
  entries: CollectionEntry<'community-feed'>[];
  currentPage: number;
  totalPages: number;
  basePath: string;
}

const { githubUsername, entries, currentPage, totalPages, basePath } = Astro.props;
const compactEntryIds = entries
  .filter((entry) => {
    const isAuthoredByContributor =
      entry.data.author && isSameAuthorKey(entry.data.author, githubUsername);
    if (isAuthoredByContributor) return false;
    return (entry.data.featuring ?? []).some((featuredAuthor) =>
      isSameAuthorKey(featuredAuthor, githubUsername)
    );
  })
  .map((entry) => entry.id);
---

<section aria-labelledby="contributor-feed-heading">
  <h2 id="contributor-feed-heading" class="mb-6 text-2xl font-header font-bold text-brand-dark">
    Contibutor Feed
  </h2>
  {entries.length > 0 ? (
    <>
      <FeedEntries
        entries={entries}
        compactEntryIds={compactEntryIds}
        compactLabel="Featured in"
        compactActionLabel="View post"
      />
      <Pagination currentPage={currentPage} totalPages={totalPages} basePath={basePath} />
    </>
  ) : (
    <p class="rounded-lg border border-dashed border-edge bg-surface p-6 text-muted-light">
      No Contibutor Feed entries are available yet for this contributor.
    </p>
  )}
</section>
