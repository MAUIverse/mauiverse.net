---
import {
  getAuthorDisplayName,
  getAuthorImageSrc,
  getAuthorKeys,
  getInternalContributorProfileHref,
} from '../../data/authors';

const avatarKeys = getAuthorKeys().sort(() => Math.random() - 0.5).slice(0, 12);
---

<div class="fade-in mb-12 flex flex-col gap-8 md:flex-row md:items-start md:gap-10">
  <div class="md:basis-3/5 md:max-w-2xl">
    <p class="text-brand font-bold mb-4 text-sm font-header uppercase tracking-[0.2em]">
      From the community
    </p>
    <h1 class="text-gradient text-4xl md:text-6xl font-header font-bold mb-5">
      Contributor Feed
    </h1>
    <p class="text-muted text-lg md:text-xl max-w-2xl leading-relaxed">
      Notable moments, packages, projects, and celebrations from the MAUIverse community.
    </p>
    <div class="flex justify-start mt-4">
      <a
        href="/community-feed/rss.xml"
        class="inline-flex items-center justify-center gap-2 rounded-full border border-orange-500 bg-orange-500 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:border-orange-600 hover:bg-orange-600"
        aria-label="Subscribe to Contributor Feed via RSS"
        title="Subscribe via RSS"
      >
        <i class="fa-solid fa-rss" aria-hidden="true"></i>
        <span>Subscribe via RSS</span>
      </a>
    </div>
  </div>

  <aside class="w-full md:basis-2/5 md:shrink-0">
    <div class="grid grid-cols-6 gap-3 justify-items-center">
      {avatarKeys.map((githubUsername) => {
        const profileHref = getInternalContributorProfileHref(githubUsername);
        return profileHref ? (
          <a
            href={profileHref}
            aria-label={`View ${getAuthorDisplayName(githubUsername)}'s profile`}
            title={getAuthorDisplayName(githubUsername)}
            class="inline-flex h-10 w-10"
          >
            <img
              src={getAuthorImageSrc(githubUsername, 80)}
              alt={getAuthorDisplayName(githubUsername)}
              width="40"
              height="40"
              class="block h-full w-full rounded-full"
              loading="lazy"
            />
          </a>
        ) : (
          <span
            class="inline-flex h-10 w-10"
            title={getAuthorDisplayName(githubUsername)}
          >
            <img
              src={getAuthorImageSrc(githubUsername, 80)}
              alt={getAuthorDisplayName(githubUsername)}
              width="40"
              height="40"
              class="block h-full w-full rounded-full"
              loading="lazy"
            />
          </span>
        );
      })}
    </div>
    <a href="/community-contributors/" class="mt-4 block text-right text-sm font-semibold text-muted hover:underline">
      Meet the Contributors &rarr;
    </a>
  </aside>
</div>

<div class="mb-8 flex items-center justify-between border-b border-edge/30 pb-4">
  <div>
    <p class="text-sm text-muted">Looking for something specific?</p>
  </div>
  <a href="/community-feed/search" class="text-sm font-semibold text-brand hover:underline">
    Search &rarr;
  </a>
</div>
