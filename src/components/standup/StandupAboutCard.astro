---
type AboutItem = {
  label: string;
  value: string;
  href?: string;
  spanTwoCols?: boolean;
};

interface Props {
  title?: string;
  items: AboutItem[];
}

const { title = 'About the Standup', items } = Astro.props;
---

<section class="py-2">
  <h2 class="text-brand-dark font-header font-bold text-xl mb-4">{title}</h2>
  <p class="text-muted mb-6">
    <slot />
  </p>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
    {items.map((item) => (
      <div class:list={['border-b border-edge/30 pb-4', { 'sm:col-span-2': item.spanTwoCols }]}>
        <span class="block text-muted-light text-xs uppercase tracking-wide mb-1">{item.label}</span>
        {item.href ? (
          <a
            href={item.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-brand font-semibold hover:underline"
          >
            {item.value}
          </a>
        ) : (
          <span class="text-brand-dark font-semibold">{item.value}</span>
        )}
      </div>
    ))}
  </div>
</section>
